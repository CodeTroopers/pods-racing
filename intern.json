{
	"environments": [
		"node"
	],
	"plugins": [
		"node_modules/babel-register/lib/node.js",
		"tests/setup.js"
	],
	"instrumenterOptions": {
		"esModules": true
	},
	"coverage": [
		"!**/design.js",
		"src/**/*.js"
	],
	"suites": [
		//"tests/unit/**/*.js"
		//"tests/unit/dataManager.js",
		//"tests/unit/date.js",
		"tests/unit/dbSet.js"
		//"tests/unit/engine.js",
		//"tests/unit/environmentObject.js",
		//"tests/unit/gravity.js",
		//"tests/unit/model.js",
		//"tests/unit/pod.js",
		//"tests/unit/race.js",
		//"tests/unit/runner.js" ,
		//"tests/unit/tank.js",
		//"tests/unit/user.js"
	],
	"reporters": [
		"runner",
		{
			"name": "htmlcoverage",
			"watermarks": {
				"statements": [70, 95],
				"lines": [70, 95],
				"functions": [70, 95],
				"branches": [70, 95]
			}
		}
	]
}